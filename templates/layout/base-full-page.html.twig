{% use 'layout/menu.vue.twig' %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
            <link href="https://cdn.jsdelivr.net/npm/@mdi/font@4.x/css/materialdesignicons.min.css" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="app">
            <app>
                <div slot="menu">
                    {% block menu %}{{ parent() }}{% endblock %}
                </div>
                {% include 'layout/flash_messages.vue.twig' %}
                {% block body %}{% endblock %}
            </app>
        </div>
        {% block javascripts %}
            {% block script %}{% endblock %}
            <script>
                window.vue =(Object.assign({
                    el: '#app',
                    delimiters: ['@{', '}'], {# Make sure to set the same delimiters in 'base-fetched-page.html.twig #}
                }, window.vue ?? {}));
                window.vueData = {{ get_vue_data() | raw }};
                window.vueStoreData = {{ get_vue_store() | raw }};
            </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>